<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/news_one_image1"
        android:layout_width="@dimen/news_itemone_width"
        android:layout_height="@dimen/news_itemone_heigh"
        app:layout_constraintHorizontal_weight="2"
        android:layout_margin="@dimen/image_margin"
        fresco:actualImageScaleType="focusCrop"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/news_one_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_marginLeft="@dimen/image_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@id/news_one_image1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/news_one_image1" />

    <TextView
        android:id="@+id/news_one_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/image_margin"
        app:layout_constraintLeft_toRightOf="@+id/news_one_image1"
        app:layout_constraintBottom_toBottomOf="@+id/news_one_image1"
        />

</android.support.constraint.ConstraintLayout>